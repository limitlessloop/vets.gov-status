<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>gov.va</groupId>
    <artifactId>performancedashboard</artifactId>
    <version>1</version>
    <properties>
        <sonar.sources>scripts/,src/</sonar.sources>
        <sonar.tests>test/</sonar.tests>
        <sonar.exclusions>src/assets/vendor/**/*</sonar.exclusions>
        <sonar.coverage.exclusions>scripts/test/**/*</sonar.coverage.exclusions>
        <sonar.python.coverage.reportPaths>results/coverage/pytest-coverage.xml</sonar.python.coverage.reportPaths>
        <sonar.python.xunit.reportPath>results/unit/pytest-unit.xml</sonar.python.xunit.reportPath>
    </properties>
</project>
